{
    "python.linting.enabled": true,
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "120",
        "--experimental"
    ],
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: chromium, indent_width: 2}"
    ],
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
}